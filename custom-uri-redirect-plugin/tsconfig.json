{
  "compilerOptions": {
    "target": "es6",  // Specify ECMAScript target version
    "module": "es6",  // Module system to use
    "lib": ["es6", "dom"],  // Include necessary libraries (e.g., ES6 and DOM APIs)
    "strict": true,  // Enable strict type-checking options
    "esModuleInterop": true,  // Allow default imports from CommonJS modules
    "outDir": "build",  // Output directory for compiled files
    "importHelpers": true,  // Use tslib helpers for common tasks like async/await
    "moduleResolution": "node",  // Use Node module resolution strategy to locate modules like tslib
    // Add typeRoots to specify where to look for type definitions
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "obsidian.d.ts", 
    "src/**/*.ts",
    "main.ts" // Ensure main.ts is included
  ],
  "exclude": ["node_modules"]
}